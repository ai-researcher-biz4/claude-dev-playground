# EditorConfig - https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.java]
indent_size = 4

[*.{kt,kts}]
indent_size = 4

[*.swift]
indent_size = 4

[Makefile]
indent_style = tab
